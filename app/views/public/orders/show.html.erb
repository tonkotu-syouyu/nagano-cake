<h4>注文履歴詳細</h2>
<div class="row">
  <div class="col-lg-8">
    <h5>注文情報</h5>
    <table class="table">
      <tr><th>注文日</th><td><%= @order.created_at %></td></tr>
      <tr><th>配送先</th><td><%= @order.address %></td></tr>
      <tr><th>支払方法</th><td><%= @order.payment_method %></td></tr>
      <tr><th>注文ステータス</th><td><%= @order.status %></td></tr>
    </table>
  </div>
  <div class="col-lg-4">
    <h5>請求情報</h5>
    <table>
      <tr><th>商品合計</th><td></td></tr>
      <tr><th>配送料</th><td>800</td></tr>
      <tr><th>ご請求額</th><td></td></tr>
    </table>
  </div>
</div>
<div class="row">
  <table class="table">
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  <%= @order_details.order.each do |order_detail| %>
    <tr>
      <td><%= order_details.order.product.name %></td>
      <td><%= number_with_delimiter(order_details.price, :delimiter => ',') %></td>
      <td><%= order_details.amount %></td>
      <td><%= number_with_delimiter(order_details.total_price.round, :delimiter => ',') %></td>
    </tr>
  <% end %>
  </table>
</div>
