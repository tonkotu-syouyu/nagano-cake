<h2>注文履歴一覧</h2>
<table class="table">
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.address %></td>
    <td><%# order.cart_product.product.name %></td>
    <td><%= order.total_payment %></td>
    <td><%= order.status %></td>
    <td><%= link_to '表示する', public_order_path(@customer.id), class: "btn btn-primary" %></td>
  </tr>
  <% end %>
</table>
<%= paginate @orders %>