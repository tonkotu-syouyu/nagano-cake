<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>商品一覧</h2>
      <p>(全<%= @products.count %>件)</p>
    </div>
  </div>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-lg-4">
        <%= link_to public_product_path(product.id) do %>
          <%= attachment_image_tag product, :image, size: "200x150", fallback: "no_image.jpeg" %><br>
        <% end %>
        <%= product.name %><br>
        <%# number_to_currency(product.price, unit: "￥", strip_insignificant_zeros: true)
          <%= product.price %><br>
        <%# end %>
      </div>
    <% end %>
  </div>
</div>


<%= paginate @products %>