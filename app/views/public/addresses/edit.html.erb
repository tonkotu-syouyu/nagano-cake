<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h1 class="index-title">配送先編集</h1>
        <%= form_with model:@address, url: public_address_path(@address),method: :patch, local:true do |f| %>
          <div class="form-group">
            <label for="address_postal_code">郵便番号</label>
            <%= f.text_field :postal_code, autofocus: true %>
          </div>
          <div class="form-group">
            <label for="address">住所</label>
            <%= f.text_field :address, autofocus: true %>
          </div>
          <div class="form-group">
            <label for="address_name">宛名</label>
            <%= f.text_field :name, autofocus: true %>
          </div>


          <%= f.submit "変更内容を保存", class: 'btn btn-success' %>

        <% end %>
      </div>
    </div>
  </div>