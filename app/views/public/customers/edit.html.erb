<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h2>会員情報編集</h2>
        <%= form_with model:@customer,url: public_customer_path(@customer),method: :patch, local:true do |f| %>
          <div class="form-group">
            <label for="customer_name">氏名</label>
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.text_field :first_name, autofocus: true %>
          </div>
          <div class="form-group">
            <label for="customer_name_kana">カナ</label>
            <%= f.text_field :last_name_kana, autofocus: true %>
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>
          <div class="form-group">
            <label for="customer_postal_code">郵便番号</label>
            <%= f.text_field :postal_code, autofocus: true %>
          </div>
          <div class="form-group">
            <label for="customer_address">住所</label>
            <%= f.text_field :address, sutofocus: true %>
          </div>
          <div class="form-group">
            <label for="customer_telephone_number">電話番号</label>
            <%= f.text_field :telephone_number, sutofocus: true %>
          </div>
          <div class="form-group">
            <label for="customer_email">メールアドレス</label>
            <%= f.text_field :email, sutofocus: true %>
          </div>

          <%= f.submit "編集内容を保存", class: 'btn btn-success' %>

        <% end %>
        <%= link_to "退会する", public_customers_unsubscribe_path, class: 'btn btn-danger' %>

      </div>
    </div>
  </div>