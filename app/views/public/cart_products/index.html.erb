<div class="container">
  <h4>ショッピングカート</h4>
  <%= button_to 'カートを空にする', public_cart_products_destroy_all, method: :delete, class: 'btn btn-danger btn-sm' %>
  <div class="row">
    <% @cart_product.products.each do |product| %>
    <table>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.amount %></td>
        <td text-align:center;><font size="4"><%= (product.total_price).to_i %>円</font></td>
        <td><%= button_to "削除する", public_cart_products_path, method: :delete, class: 'btn btn-danger' %></td>
      </tr>
      <tr>
  			<td colspan="6"><font size="5">総計：<%= (@cart_product.total_price).to_i %>円</font></td>
    	</tr>
    </table>
    <% end %>
    <%= button_to '買い物を続ける', public_products_path, class: 'btn btn-primary btn-sm' %>
  </div>
  <div class="row">
    <div class=mx-auto>
      <%= button_to '情報入力に進む', new_public_order_path, class: 'btn btn-success' %>
  </div>
</div>
