<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>

    <%= csrf_meta_tags %>

    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:300 rel="stylesheet">
    <script src="https://kit.fontawesome.com/f3294f4f4d.js" crossorigin="anonymous"></script>
  </head>

  <% if customer_signed_in? %>
    <body id="wrapper" style="background-color: white; font-family: 'Alegreya Sans SC', sans-serif; color: #000000;">
    <!-- ヘッダー -->
    <div id="header">
      <%= render "layouts/header" %>
    </div>

    <!-- Body部分 -->
    <div class="container" style="margin-top: 20px;">
    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>
    <%= yield %>
    </div>

    <!-- Footer -->
    <%= render "layouts/footer" %>
    </body>
  <% elsif admin_signed_in? %>
    <body id="wrapper" style="background-color: white; font-family: HiraMinPro-W6; color: #000000;">
    <!-- ヘッダー -->
    <div id="header">
      <%= render "layouts/header" %>
    </div>

    <!-- Body部分 -->
    <div class="container" style="margin-top: 20px;">
    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>
    <%= yield %>
    </div>

    <!-- Footer -->
    <%= render "layouts/footer" %>
    </body>
  <% else %>
    <body id="wrapper" style="background-color: white; font-family: HiraMinPro-W6; color: #000000; ">
    <!-- ヘッダー -->
    <div id="header">
      <%= render "layouts/header" %>
    </div>

    <!-- Body部分 -->
    <div class="container" style="margin-top: 20px;">
      <%= yield %>
    </div>

    <!-- Footer -->
    <%= render "layouts/footer" %>
    </body>
  <% end %>
</html>
