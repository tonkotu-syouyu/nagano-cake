          <li class="nav-list-item"><%= link_to "About", public_about_path %><i class="far fa-comment"></i></li>
          <li class="nav-list-item"><%= link_to "商品一覧", public_products_path %><i class="fas fa-pizza-slice"></li>
          <li class="nav-list-item"><%= link_to "新規登録", new_customer_registration_path %><i class="fas fa-user-plus"></i></li>
          <li class="nav-list-item"><%= link_to "ログイン", new_customer_session_path %><i class="fas fa-sign-in-alt"></i></li>
