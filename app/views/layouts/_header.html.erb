<header>
  <div class="container">
    <div class="navbar-header">
    <nav>
      <ul class="nav-list">
      <% if customer_signed_in? %>
          <!--customerがログインしている時 -->
          ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！
          <li class="nav-list-item"><%= link_to "マイページ", public_customers_my_page_path %><i class="fas fa-address-card"></i></li>
          <li class="nav-list-item"><%= link_to "商品一覧", public_products_path %><i class="fas fa-pizza-slice"></i></li>
          <li class="nav-list-item"><%= link_to "カート", public_cart_products_path %><i class="fas fa-shopping-cart"></i></li>
          <li class="nav-list-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %><i class="fas fa-sign-out-alt"></i></li>

        <% elsif admin_signed_in? %>
