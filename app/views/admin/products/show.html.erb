<div class="container">
  <h2 class="show-title">商品詳細</h2>
    <div class="row">
      <div class="col-lg-4">
        <%= attachment_image_tag @product, :image, size: "300x300", fallback: "no_image.jpeg"%><br>
      </div>
       <div class="col-xs-8">
        <table class="table">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @product.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @product.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格</td>
              <td><%= (@product.price*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
              <% if @product.is_active == false %>
              販売中
              <% else %>
              販売停止中
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      <%= button_to '編集する',edit_admin_product_path(@product.id), method: :get ,class: "btn btn-warning", style: "margin-left:70%;"%>
    </div>
    </div>
</div>
