<div class="container">
  <div class="row">

    <h2 class="new-title">商品新規登録</h2><br>

    <div class="col-xs-4">
      <%= form_for(@product, url: admin_products_path) do |f| %>
      <div class="product-image">
        <%= attachment_image_tag @product, :image, fallback: "no_image.jpeg", size:"300x300" %>
      </div><br>
      <%= f.attachment_field :image, placeholder: "商品画像" %>
    </div>
    <br><br><br>
      <div class="col-md-5 col-md-offset-2 col-xs-5 col-xs-offset-2">
        <table class="new-form-table">
          <tbody>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :introduction, class: "form-control" %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>
            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price, class: "form-control" %></td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_active, [["販売中", "false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
            </tr>
          </tbody>
        </table>
        <div class="text-right">
          <%= f.submit "商品登録", class: "btn btn-info" %>
        </div>
        </div>
        <% end %>
      </form>

    </div>
  </div>
</div>
