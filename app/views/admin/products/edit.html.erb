<div class="container">

  <h2 class="edit-title">商品編集</h2>

  <%= form_for @product,url: {action: "update"} do |f| %>
  <div class="row">
    <div class="col-xs-4">
      <%= attachment_image_tag @product, :image, size: "300x300",  fallback: "no_image.jpeg"%><br>
      <label>商品画像</label>
      <%= f.attachment_field :image %>
    </div>
      <div class="col-xs-5 col-xs-offset-2">
        <table class="new-form-table">
          <tbody>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :introduction, class: "form-control" %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>
             <tr>
              <th>税抜価格</th>
              <td>  <%= f.text_field :price, class: "form-control" %></td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
            </tr>
          </tbody>
        </table>
        <%= f.submit :変更を保存, class: "btn btn-primary" %>
      </div>
        <% end %>
      </div>
    </div>
  </div>
