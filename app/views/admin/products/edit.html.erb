<div class="container">

  <h2 class="edit-title">商品編集</h2>

  <%= form_for @product,url: {action: "update"} do |f| %>
  <div class="row">
    <div class="col-xs-4">
      <%= attachment_image_tag @product, :image_id, size: "300x300",  fallback: "no_image.jpg"%><br>
      <label>商品画像</label>
      <%= f.attachment_field :image_id %>
    </div>
    <div class="col-xs-8">
        <%= f.label :"商品名" ,class: "col-xs-3" %>
        <%= f.text_field :item_name, class: "col-xs-8 " %><br>

        <%= f.label :"商品説明" ,class: "col-xs-3"%>
        <%= f.text_area :explanation,size: "5x10", class: "col-xs-8",style:"margin-bottom:30px;" %>

        <%= f.label :"ジャンル" ,class: "col-xs-3 "%>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>

        <%= f.label :"税抜価格" ,class: "col-xs-3"%>
        <%= f.text_field :price, class: "col-xs-5"%>円<br>

        <%= f.label :"販売ステータス" ,class: "col-xs-3" %>
        <%= f.select :is_active,["販売中","販売停止"] ,class: "col-xs-8"%>
        
        <%= f.submit :変更を保存, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
