<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2 class="admin-customers-show-title">会員詳細画面</h2>
        <table class="row table admin-customers-show-table">
        <tr>
           <th class="col-xs-2">顧客ID</th>
            <td class="col-xs-10">
              <%= @customer.id %></td>
        </tr>
        
        <tr>
          <th>氏名</th>
          <td><%= full_name(@customer) %></td>
        </tr>
        
        <tr>
          <th>フリガナ</th>
          <td><%= kane_full_name(@customer) %>/td>
        </tr>
        
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        
        <tr>
          <th>住所</th>
          <td><%= @customer.residence %></td>
        </tr>
        
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if customer.is_valid == true%>
            <span>　<i class="fas fa-bullseye blue"></i>退会済
          <% elsif @customer.is_valid == false %>
            　<i class="fas fa-bullseye red"></i>有効</span>
          <% end %>
          </td>
        </tr>
        </table>
        <div class="row">
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
          <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>