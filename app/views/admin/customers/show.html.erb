<h2>ユーザー詳細画面</h2>

<div class="row">
    <div class="col-xs-8">
      <div class="field">
        <tr>
          <th>顧客ID</th>
          <td><%= @customer.id %></td>
        </tr>
        
        <tr>
          <th>氏名</th>
          <td><%= full_name(@customer) %></td>
        </tr>
        
        <tr>
          <th>フリガナ</th>
          <td><%= kane_full_name(@customer) %>/td>
        </tr>
        
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        
        <tr>
          <th>住所</th>
          <td><%= @customer.residence %></td>
        </tr>
        
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if customer.is_valid == true%>
            <p>退会済</p>
            <% else %>
            <p>有効</p>
            <% end %>
          </td>
        </tr>
      </div>
    </div>
  </div>