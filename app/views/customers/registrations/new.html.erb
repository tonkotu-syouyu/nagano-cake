
<p id="notice"></p>
  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

      <table class="table table-borderless">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">
              <h3>新規会員登録</h3>
            </th>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th scope="row">名前</th>
            <td>(姓)</td>
            <td><%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %></td>
            <td>(名)</td>
            <td><%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %></td>
            <td></td>
          </tr>
          <tr>
            <th scope="row">フリガナ</th>
            <td>(セイ)</td>
            <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control" %></td>
            <td>(メイ)</td>
            <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control" %></td>
            <td></td>
          </tr>
            <th scope="row">メールアドレス</th>
            <td></td>
            <td><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th scope="row">郵便番号(ハイフンなし)</th>
            <td></td>
            <td><%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control" %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th scope="row">住所</th>
            <td></td>
            <td colspan="3"> <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %></td>
            <td></td>
          </tr>
          </tr>
            <th scope="row">電話番号(ハイフンなし)</th>
            <td></td>
            <td> <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          </tr>
            <th scope="row">パスワード(6文字以上)</th>
            <td></td>
            <td>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          </tr>
            <th scope="row">パスワード(確認用)</th>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th>
              <h4>既に登録済みの方<%= render "customers/shared/links" %></h4>
            </th>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>

        </tbody>
      </table>
    <% end %>
  </div>

